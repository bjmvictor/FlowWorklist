# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell
*.sh text eol=lf
*.bash text eol=lf

# Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.psm1 text eol=crlf

# JSON/YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pyc binary
